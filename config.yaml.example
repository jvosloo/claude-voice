# Claude Voice Interface Configuration

input:
  hotkey: "right_alt"          # Key to hold for recording
  language_hotkey: "right_cmd"  # Key to cycle languages
  auto_submit: false           # Press Enter after transcription
  min_audio_length: 0.5        # Ignore recordings shorter than this (seconds)
  typing_delay: 0              # Delay between keystrokes (seconds), e.g. 0.005 for a slight delay

transcription:
  model: "large-v3"             # tiny.en, base.en, small.en, medium.en, large-v3
  language: "en"
  device: "cpu"                # cpu or cuda (for faster-whisper)
  backend: "mlx"               # "faster-whisper" or "mlx" (mlx is faster on Apple Silicon)
  extra_languages: ["af"]        # Additional languages to cycle through (e.g. ["af", "de"])
  word_replacements:              # Fix consistently misheard words (case-insensitive, whole-word)
    "clawd": "Claude"             # Key = what Whisper hears, Value = what you actually said
    # "clothes code": "Claude Code"

speech:
  enabled: true                # Set to false to disable TTS output
  mode: "notify"               # "notify" = short status phrases, "narrate" = summarized response
  narrate_style: "brief"       # "brief" = 1-2 sentences, "conversational" = casual recap, "bullets" = bullet points
  summarize_model: "qwen2.5:3b" # Ollama model for narrate summarization
  engine: "kokoro"             # "kokoro" (local, free) or "openai" (cloud, ~$30/1M chars)
  # OpenAI TTS settings (used when engine: "openai")
  # openai_api_key: ""         # Or set OPENAI_API_KEY env var
  # openai_model: "tts-1"     # "tts-1" (fast) or "tts-1-hd" (higher quality)
  # Notify mode settings
  notify_phrases:
    done: "Over to you"
    permission: "Permission needed"
    question: "Please choose an option"
  voice: "af_heart"            # Kokoro: af_heart, bm_daniel, etc. OpenAI: alloy, ash, ballad, coral, echo, fable, nova, onyx, sage, shimmer
  speed: 1.0                   # Playback speed (1.0 = normal)
  lang_code: "a"               # Language: a=American, b=British, j=Japanese, z=Chinese, e=Spanish, f=French (Kokoro only)
  max_chars: null              # Limit spoken output (null = unlimited)
  skip_code_blocks: true       # Don't speak code blocks
  skip_tool_results: true      # Don't speak tool output
  hotkey: "left_alt+v"         # Combo hotkey to toggle voice on/off (null to disable)

audio:
  input_device: null           # null = system default
  sample_rate: 16000           # Whisper expects 16kHz

overlay:
  enabled: true                # Show visual indicator during recording/transcription
  style: "dark"                # "dark" = dark HUD, "frosted" = blur glass, "colored" = solid color pills

